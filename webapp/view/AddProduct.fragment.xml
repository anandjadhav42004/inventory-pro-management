<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Add New Inventory Item" contentWidth="400px">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Asset ID" labelFor="idInput" />
                <Input id="idInput" placeholder="e.g. INV-6001" />

                <Label text="Product Name" labelFor="nameInput" class="sapUiSmallMarginTop" />
                <Input id="nameInput" placeholder="e.g. MacBook Pro" />

                <Label text="Warehouse Location" labelFor="whInput" class="sapUiSmallMarginTop" />
                <Select id="whInput" width="100%">
                    <items>
                        <core:Item key="Section-A" text="Section-A" />
                        <core:Item key="Section-B" text="Section-B" />
                        <core:Item key="Section-C" text="Section-C" />
                    </items>
                </Select>

                <Label text="Initial Quantity" labelFor="qtyInput" class="sapUiSmallMarginTop" />
                <StepInput id="qtyInput" value="0" min="0" />
            </VBox>
        </content>
        <beginButton>
            <Button text="Save Product" type="Emphasized" press="onSaveProduct" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>